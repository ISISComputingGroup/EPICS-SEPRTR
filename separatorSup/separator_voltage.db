record(bo, "$(P)SIM")
{
  field(SCAN, "Passive")
  field(DTYP, "Soft Channel")
  field(ZNAM, "NO")
  field(ONAM, "YES")
  field(VAL, "$(RECSIM=0)")
}

record(bo, "$(P)DISABLE")
{
  field(DESC, "Disable comms")
  field(PINI, "YES")
  field(VAL, "$(DISABLE=0)")
  field(OMSL, "supervisory")
  field(ZNAM, "COMMS ENABLED")
  field(ONAM, "COMMS DISABLED")
}

record(ai, "$(P)VOLT")
{
  field(DESC, "Voltage")
  field(EGU,  "kV")
  field(HIGH, "$(PSU_MAX_VOLT)")
  field(LOW,  "0")
  field(HSV,  "MINOR")
  field(LSV,  "MINOR")
  field(DTYP, "Soft Channel")
  field(INP,  "$(P)CALIBRATE:VOLT CP MS") # input from DATA
  field(PREC, "5")
  info(INTEREST, "HIGH")
  info(archive, "VAL")
}

record (acalcout, "$(P)VOLT:DATA:_AVG") {
  field(DESC, "Averages the voltage data")
  field(DTYP, "Soft Channel")
  field(NELM, "$(NELM)")
  field(INAA, "$(P)DAQ:VOLT:_RAW CP MS")

  field(CALC, "AVG(AA)")
  field(OOPT, "Every Time")
  field(DOPT, "Use CALC")
}

record(calc, "$(P)_VOLTCALIBCONST")
{
    field(DESC, "Holds DAQ to Volts calibration constant")
    field(CALC, "$(PSU_MAX_VOLT)/10")
    field(PINI, "YES")
    field(PREC, "5")
}

record(acalcout, "$(P)_APPLYVOLTCALIB")
{
  field(DESC, "Applies voltage calibration")
  field(DTYP, "Soft Channel")
  field(OOPT, "Every Time")
  field(NELM, "$(NELM)")

  field(PREC, "5")

  field(CALC, "B * AA")
  field(INAA, "$(P)DAQ:VOLT:_RAW")
  field(INPB, "$(P)_VOLTCALIBCONST NPP")

  field(OUT, "$(P)CALIBRATE:VOLT PP")
  field(OEVT, "1")

}

record(waveform, "$(P)CALIBRATE:VOLT") {
  field(DESC, "Holds calibrated voltage data")
  field(NELM, "$(NELM)")
  field(DTYP, "Soft Channel")
  field(PREC, "5")
}

record(waveform, "$(P)DAQ:VOLT:_RAW")
{
  $(IFNOTRECSIM) field(SCAN,"I/O Intr")
  $(IFNOTRECSIM)  field(PINI, "NO")
  $(IFNOTRECSIM)  field(DTYP, "asynFloat64ArrayIn")
  $(IFRECSIM) field(DTYP, "Soft Channel")
  field(PREC, "5")
  field(INP, "@asyn(R0 2 5.0) DATA")
  field(NELM, "$(NELM)")
  field(FTVL, "DOUBLE")
  field(EVNT, "1")
  field(SIML, "$(P)SIM")
  field(SIOL, "$(P)DAQ:VOLT:WV:SIM")
  field(FLNK, "$(P)_APPLYVOLTCALIB")
  field(SDIS, "$(P)DISABLE")
}

record(waveform,  "$(P)DAQ:VOLT:WV:SIM")
{
  field(DESC,  "Voltage simulation")
  field(NELM,  "$(NELM)")
  field(FTVL,  "DOUBLE")
  field(FLNK, "$(P)DAQ:VOLT:_RAW")
}

record(acalcout, "$(P)DAQ:SIM:CALC")
{
  field(DESC, "Converts voltage to waveform")
  field(INPA, "$(P)DAQ:VOLT:SIM CP")
  field(CALC, "ARR(A)")
  field(NELM, "$(NELM)")

  field(OOPT, "Every Time")
  field(OUT, "$(P)DAQ:VOLT:WV:SIM PP")
  field(DOPT, "Use CALC")
}

## TRIGGER records

record(calcout, "$(P)DAQ:VOLT:ACQUIRE:_TRIG")
{
  field(INPA, "$(P)DAQ:VOLT:ACQUIRE.VAL CP MS")
  field(CALC, "!A")
  field(OUT, "$(P)DAQ:VOLT:ACQUIRE.VAL PP")
  field(OOPT, "When Non-zero")
}

record(longout, "$(P)DAQ:VOLT:ACQUIRE")
{
  field(SCAN, ".5 second")
  field(DTYP, "asynUInt32Digital")
  field(OUT, "@asynMask(R0 2 0x01) ACQUIRE")
  field(SDIS, "$(P)DISABLE")
}

####################################
####### Setting the voltage ########
####################################

record(ao, "$(P)VOLT:SP")
{
  field(DESC, "Voltage set point")
  field(EGU, "kV")
  field(DRVH,  "200")
  field(DRVL,  "0")
  field(SCAN, "Passive")
  field(DTYP, "Soft Channel")
  field(PREC, "2")
}

record(calcout, "$(P)CALIBRATE:VOLT:SP")
{
  field(IVOA, "Don't drive outputs")
  field(DESC, "Calibrates the voltage setpoint")
  field(INPA, "$(P)VOLT:SP CP MS")
  field(CALC, "(A * 10) / $(PSU_MAX_VOLT)")
  field(PREC, "5")
  field(OUT, "$(P)DAQ:VOLT:SP:DATA PP")
}

record(ao, "$(P)DAQ:VOLT:SP:DATA")
{
  $(IFNOTRECSIM)  field(DTYP, "asynFloat64")
  $(IFRECSIM) field(DTYP, "Soft Channel")
  field(OUT, "@asyn(W0, 2, 5.0) DATA")
  field(PREC, "5")
  field(SIML, "$(P)SIM")
  field(SIOL, "$(P)DAQ:VOLT:SIM")
  field(SDIS, "$(P)DISABLE")
}

record(ai, "$(P)DAQ:VOLT:SIM")
{
  field(INP, "$(P)DAQ:VOLT:SP:DATA CP")
  field(DESC, "Device voltage")
  field(DTYP, "Soft Channel")
  field(PREC, "5")
}
