# Separator Current

record(ai, "$(P)CURR")
{
  field(DESC, "Current")
  field(EGU, "mA")
  field(HIGH,  "2.6") # Magic number is DAQ max with small tolerance
  field(LOW,  "-0.1") # Magic number is DAQ min with small tolernace
  field(HSV,  "MINOR")
  field(LSV,  "MINOR")
  field(DTYP, "Soft Channel")
  field(INP,  "$(P)CURR:DATA:_AVG CP MS") # input from DATA array
  field(PREC, "5")
  info(INTEREST, "HIGH")
  info(archive, "VAL")
}

record (acalcout, "$(P)CURR:DATA:_AVG") {
  field(DESC, "Averages the current data")
  field(DTYP, "Soft Channel")
  field(NELM, "$(NELM)")
  field(INAA, "$(P)CALIBRATE:CURR CP MS")

  field(CALC, "AVG(AA)")
  field(OOPT, "Every Time")
  field(DOPT, "Use CALC")
}

record(calc, "$(P)_CURRCALIBCONST")
{
    field(DESC, "Holds DAQ to Amps calibration constant")
    field(CALC, "$(PSU_MAX_CURR)/10")
    field(PINI, "YES")
}

record(acalcout, "$(P)_APPLYCURRCALIB")
{
  field(DESC, "Applies current calibration")
  field(DTYP, "Soft Channel")
  field(OOPT, "Every Time")
  field(NELM, "$(NELM)")

  field(CALC, "B * AA")

  field(INAA, "$(P)DAQ:CURR:_RAW")
  field(INPB, "$(P)_CURRCALIBCONST")

  field(OUT, "$(P)CALIBRATE:CURR PP")
  field(OEVT, "1")
}

record(waveform, "$(P)CALIBRATE:CURR") {
  field(DESC, "Holds calibrated current data")
  field(NELM, "$(NELM)")
  field(DTYP, "Soft Channel")
}

record(waveform, "$(DAQMX)CURR:_RAW")
{
  $(IFNOTRECSIM) field(SCAN,"I/O Intr")
  $(IFNOTRECSIM) field(PINI, "NO")
  $(IFNOTRECSIM)  field(DTYP, "asynFloat64ArrayIn")
  $(IFRECSIM) field(DTYP, "Soft Channel")
  field(PREC, "5")
  field(INP, "@asyn(R0 3 5.0) DATA")
  field(NELM, "$(NELM)")
  field(FTVL, "DOUBLE")
  field(EVNT, "1")
  field(SIML, "$(P)SIM")
  field(SIOL, "$(DAQMX)CURR:WV:SIM")
  field(SDIS, "$(P)DISABLE")
  field(FLNK, "$(P)_APPLYCURRCALIB")
}

record(calcout, "$(DAQMX)CURR:ACQUIRE:_TRIG")
{
  field(INPA, "$(DAQMX)CURR:ACQUIRE.VAL CP MS")
  field(CALC, "!A")
  field(OUT, "$(DAQMX)CURR:ACQUIRE.VAL PP")
  field(OOPT, "When Non-zero")
}

record(longout, "$(DAQMX)CURR:ACQUIRE")
{
  field(SCAN, "1 second")
  field(DTYP, "asynUInt32Digital")
  field(OUT, "@asynMask(R0 3 0x01) ACQUIRE")
  field(SDIS, "$(P)DISABLE")
}

## SIM records

record(waveform,  "$(DAQMX)CURR:WV:SIM")
{
  field(DESC,  "Current simulation")
  field(NELM,  "$(NELM)")
  field(FTVL,  "DOUBLE")
  field(FLNK, "$(P)DAQ:CURR:_RAW")
}
